/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.coverImage{
  width: 200px;
}
.image{
  width: 200px;
}
.long-block{
  width: 20px;
  height: 400px;
  background-color: red;
  position: fixed;
	top: 0;
	left: calc(50% - 10px);
	z-index: 3;
}
.input{
  width: 100%;
  margin-bottom: 25px;
  border: 1px solid #ccc;
}
textarea{
  width: 100%; 
  height: 180rpx;
  font-size: 30rpx;
  margin-bottom: 25px;
  border: 1px solid #ccc;
}
.modal{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 200px;
  height: 200px;
  background-color: #fff;
  position: fixed;
	top: 0;
	left: calc(50% - 100px);
	z-index: 3;
}

