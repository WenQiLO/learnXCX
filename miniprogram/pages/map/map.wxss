page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}
.btn-area{
  margin-top: 15px;
}
.modal{
  width: 300px;
  height: 300px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #fff;
  position: fixed;
	top: calc(20px);
  left: calc(50% - 150px);
}
.close-btn{
  width: 80%;
  margin-bottom: 10px;
}